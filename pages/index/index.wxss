.index-header {
  display: block;
  padding: 0 24rpx;
}

.index-header .swiper {
  margin-top: 20rpx;
}

.img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.index-container {
  padding: 24rpx;
}

.index-container .title {
  position: relative;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 2;
  margin-bottom: 20rpx;
}

.index-container .title:before {
  content: " ";
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -180rpx;
  width: 100rpx;
  height: 1rpx;
  background: #000;
}

.index-container .title:after {
  content: " ";
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: 80rpx;
  width: 100rpx;
  height: 1rpx;
  background: #000;
}

.index-container .filters {
  display: flex;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  margin-bottom: 10rpx;
}

.index-container .filters .filter {
  flex: 1;
  text-align: center;
  color: #696969;
  font-size: 30rpx;
  line-height: 3;
}


.index-container .filters .filter.active {
  color: #000;
  font-weight: bold;
}

.index-container image {
  width: 100%;
  height: 266rpx;
}

.dish {
  display: inline-block;
  width: 100%;
  height: 200rpx;
}

.dish-container {
  font-size: 12px;
  height: 100%;
  width: 100%;
}

.dish-img {
  float: left;
  width: 200rpx;
  height: 100%;
  background-size: cover;
}

.dish-detail {
  height: 100%;
  overflow: hidden;
  padding-left: 30rpx;
}

.dish-name {
  color: #313131;
  font-size: 16px;
  margin-bottom: 15rpx;
  line-height: 30px;
}

.dish-data {
  color: #707070;
}

.index-footer {
  height: 100rpx;
}