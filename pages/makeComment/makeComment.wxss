/* pages/publish/publish.wxss */
.body {
  width:100vw;
  min-height: 100vh;
  background-color: lightblue;
}

.top {
  display: flex;
  align-items: center;
  padding: 30rpx 550rpx;
  width: 100%;
  font-size: 50rpx;
}

.top .publish-btn{
  margin: 0 !important;
  background-color: lightseagreen;
  color: #fff;
  border-radius: 40rpx;
  width: 200rpx;
  right:20rpx;

}

.container{
  /*上右下左*/
  padding: 30rpx 35rpx 50rpx 35rpx;

}


.picker{
  width:100%;
}

.score{
  color: #aaa;
  font-size: 40rpx;
}

.picker .empty, .select{
  border: 2rpx solid #aaa;
  width: 100%;
  height: 100rpx;
  padding: 10rpx 50rpx;
  box-sizing: border-box;
  border-radius: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.select-icon{
  width: 50rpx;
  height: 50rpx;
}
.select-text{
  color: #aaa;
  font-size: 40rpx;
}


.desc {
  padding: 30rpx 50rpx;
  top: 150rpx;
  position: relative;
  background-color: lightgoldenrodyellow;
  border-radius: 20rpx;
  height:500rpx;
  font-size: large;
}


.desc-text{
  color: #aaa;
  font-size: 40rpx;
}


